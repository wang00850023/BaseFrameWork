<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="106dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp" >

            <ImageView
                android:id="@+id/album_bucket_photo_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <CheckBox
                android:id="@+id/album_bucket_photo_select_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:button="@drawable/footprint_image_post_select_checkbox_bg"
               />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/album_bucket_photo_select_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7de1e1e1"
            android:orientation="vertical" >
        </LinearLayout>
    </FrameLayout>

</LinearLayout>